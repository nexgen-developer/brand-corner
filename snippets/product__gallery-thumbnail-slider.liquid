<!-- snippets/product__gallery-thumbnail-slider.liquid -->
{% comment %} 
  Block to display product photos in a slider with thumbnails.

  Accepts:
    - featured: boolean to assign product object from section settings, set this to true if block is used within a section rather than product template
  
  Usage:
    {% render 'product__gallery-grid', 
      featured: true %}

  Globals:
    - settings.savings_badge: boolean to display savings badge

  Possible enhancements:
    - Add global setting to set grid gap width and apply to entire theme.
    - Move position of indicators to avoid overlap of alt text.
{% endcomment %}

{% if featured %}
  {%- assign product = section.settings.product -%}
{% endif %}

<div>
  <div class="md:flex-nowrap flex flex-wrap h-full"
    style="
      margin-top: {{ settings.layout_gap_size }}px;
      margin-bottom: {{ settings.layout_gap_size }}px;">

    {% comment %} thumbnails {% endcomment %}
    <div class="hidden md:flex flex-col basis-[10%] max-h-[500px] overflow-x-hidden overflow-y-auto"
      style="
        gap: {{ settings.layout_gap_size }}px;"
      x-ref="thumbnail_slider">
      {% for media in product.media %}
        <div 
          class="relative md:snap-center flex-none hover:cursor-pointer w-full opacity-50 border--width border--radius overflow-hidden animation-300 js:galleryImage_thumb_slider
          {{ media | handle }}"
          :class="{ '!opacity-100 color__border-selected-1': gallery_index === {{ forloop.index0 }} }"
          x-bind:data-slide="{{ forloop.index0 }}"
          @click="gallery_index_scroll = {{ forloop.index0 }}; scrollToIndex(gallery_index_scroll);">
          <div class="overflow-hidden object-cover aspect-[1/1] aspect-w-1 aspect-h-1 w-full">
            {% capture image_class %}w-full h-full object-cover !bg-transparent {{ settings.thumbmails_color_scheme }}{% endcapture %}
            {{ media
              | image_url: width: 192, height: 192
              | image_tag: class: image_class, loading: 'lazy', alt: media.alt }}
          </div>
        </div>
      {% endfor %}
    </div>

    {% comment %} main images {% endcomment %}
    <div class="relative flex w-full md:basis-[90%]">

      {%- comment -%}badges{%- endcomment -%}
      {% if section.settings.show_product_badges %}
        <div class="absolute top-0 left-0 z-10 flex flex-wrap w-full gap-2 p-2 px-4 whitespace-normal">
      
          {%- if product.metafields.reviews.rating.value != blank -%}
            {% capture badge_content %}
            {% assign rating = product.metafields.reviews.rating.value | strip %}
            {{ rating | times: 1 | round: 2 }}
              {% render 'component__icon', icon: 'star', size: '12', class: 'ml-1' %} 
            {% endcapture %}
            {% render 'component__badge', 
              color: 'overlay-2',
              text: 'text',
              icon: '',
              content: badge_content %}
          {%- endif -%}
      
          {% for tag in product.tags %}
            {% if tag contains "badge_" %}
              {% capture badge_content %}{{ tag | remove: "badge_" }}{% endcapture %}
              {% render 'component__badge', 
                color: 'secondary',
                text: 'secondary'
                icon: '',
                content: badge_content %}
            {% endif %}
          {% endfor %}
          
          {% if settings.savings_badge != 'none' %}
        {% assign discount = 0 %}
            {%- for variant in product.variants -%}
              {% assign current_discount = 0 %}
              {% if settings.savings_badge == "percent" %}
                {% assign current_discount = variant.compare_at_price | minus: variant.price | times: 100 | divided_by: variant.compare_at_price %}
              {% else %}
                {% assign current_discount = variant.compare_at_price | minus: variant.price %}
              {% endif %}
              {% if current_discount > discount %}
                {% assign discount = current_discount %}
              {% endif %}
            {%- endfor -%} 

        {% if settings.savings_badge == "percent" %}
                {% capture badge_content %} {{ 'products.general.save' | t }} {{ discount | strip | append: '%' }} {% endcapture %}
        {% else %}
                {% capture badge_content %}{{ 'products.general.save' | t }} {{ discount | money }}{% endcapture %}
        {% endif %}

        {% if discount > 0 %}  
          {% render 'component__badge', 
                color: 'secondary',
                text: 'secondary'
                icon: '',
                content: badge_content %}
        {% endif %}
      {% endif %}

        </div>
      {% endif %}
    
      {%- comment -%}arrows{%- endcomment -%}
      {% if product.media.size > 1 %}
        <div x-show="show_arrows" class="md:block top-1/2 left-4 absolute z-10 hidden -translate-y-1/2">
          <button class="btn btn--plain btn--small shadow-sm"
            title="{{ 'general.media.previous_slide' | t }}"
            {% if settings.enable_animations %}
              x-transition:enter="animation-300"
              x-transition:enter-start="opacity-0"
              x-transition:enter-end="opacity-100"
              x-transition:leave="animation-300"
              x-transition:leave-start="opacity-100"
              x-transition:leave-end="opacity-0"
            {% endif %}
            x-cloak
            @click="scrollBack();">
            {% render 'component__icon', icon: 'arrow-left', size: '20', class: '' %}
          </button>
        </div>
        <div x-show="show_arrows" class="md:block top-1/2 right-4 absolute z-10 hidden -translate-y-1/2">
          <button class="btn btn--plain btn--small shadow-sm"
            title="{{ 'general.media.next_slide' | t }}"
            {% if settings.enable_animations %}
              x-transition:enter="animation-300"
              x-transition:enter-start="opacity-0"
              x-transition:enter-end="opacity-100"
              x-transition:leave="animation-300"
              x-transition:leave-start="opacity-100"
              x-transition:leave-end="opacity-0"
            {% endif %}
            x-cloak
            @click="scrollNext();">
            {% render 'component__icon', icon: 'arrow-right', size: '20', class: '' %}
          </button>
        </div>
      {% endif %}

      {%- comment -%}slides{%- endcomment -%}
      <div class="whitespace-nowrap md:snap-x hidescrollbar padding--l-gap padding--r-gap md:px-0 md:margin--r-gap md:margin--l-gap inline-flex w-full overflow-x-auto overflow-y-hidden text-center"
        style="
          gap: {{ settings.layout_gap_size }}px;"
        x-init="setTimeout(function(){ if (isOverflown($el)) show_arrows = true}, 600)" 
        x-ref="slider">
  
        {% for media in product.media %}
          {% case media.media_type %}
            {% when 'image' %}
              {%- liquid
                if forloop.index <= 1
                  assign loading = "eager"
                else
                  assign loading = "lazy"
                endif
              -%}
              <div class="relative md:snap-center flex-none border--width border--radius overflow-hidden js:galleryImage
                {{ section.settings.image_border }}
                {{ media | handle }} 
                {% if section.settings.enable_zoom %}cursor-zoom-in{% endif %}  
                {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}"
                {% if section.settings.enable_variant_images %}
                  x-show="'{{ media.alt | handle }}'.includes(variantHandle)"
                  x-cloak
                {% endif %}  
                {% if section.settings.enable_zoom %}
                  @click="selectedImageIndex = {{ forloop.index0 }}; fullscreen = true; hide_header = true;"
                {% endif %}   
                x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
                x-bind:data-slide="{{ forloop.index0 }}">
                <div class="overflow-hidden object-cover h-full
                  {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
                  {{ section.settings.media_color_scheme }}">
                  {% if section.settings.media_object-sizing == "cover" %}
                    {% capture image_class %}w-full h-full object-cover {{ section.settings.media_color_scheme }}{% endcapture %}
                  {% else %}
                    {% capture image_class %}w-full h-full object-contain {{ section.settings.media_color_scheme }}{% endcapture %}
                  {% endif %}
                  {{ media
                    | image_url: width: 1400 
                    | image_tag: class: image_class, loading: loading, alt: media.alt }}
                </div>
                {% if section.settings.enable_alt == true and media.alt != product.title %}
                  <div class="type--smaller absolute bottom-0 w-full p-2 text-left whitespace-normal opacity-75">
                    {{ media.alt }}
                  </div>
                {% endif %}
              </div>
              
            {% when 'external_video' %}
              <div class="relative md:snap-center flex-none border--width border--radius overflow-hidden js:galleryImage
                {{ section.settings.image_border }}
                {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}"
                x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
                x-bind:data-slide="{{ forloop.index0 }}">
                <div class="bottom-2 left-2 absolute z-10">
                  {% capture badge_content %}
                    {% render 'component__icon', icon: 'play', size: '16' %}
                  {% endcapture %}
                  {% render 'component__badge', 
                    color: 'body',
                    text: 'text',
                    icon: '',
                    content: badge_content %}
                </div>
                <div class="overflow-hidden object-cover 
                  {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
                  {{ section.settings.media_color_scheme }}">
                  <div class="flex items-center">
                    <div class="aspect-video aspect-w-16 aspect-h-9 object-cover w-full">
                      {% if media.host == 'youtube' %}
                        {{ media | external_video_url: color: 'white' | external_video_tag: class: 'w-full h-full aspect-video max-w-full' }}
                      {% elsif media.host == 'vimeo' %}
                        {{ media | external_video_url: loop: '1', muted: '1' | external_video_tag: class: 'w-full h-full aspect-video max-w-full' }}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
  
            {% when 'video' %}
              <div class="relative md:snap-center flex-none border--width border--radius overflow-hidden js:galleryImage
                {{ section.settings.image_border }}
                {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}"
                x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
                x-bind:data-slide="{{ forloop.index0 }}">
                <div class="bottom-2 left-2 absolute z-10">
                  {% capture badge_content %}
                    {% render 'component__icon', icon: 'play', size: '16' %}
                  {% endcapture %}
                  {% render 'component__badge', 
                    color: 'body',
                    text: 'text',
                    icon: '',
                    content: badge_content %}
                </div>
                <div class="overflow-hidden object-contain 
                  {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
                  {{ section.settings.media_color_scheme }}">
                  <div class="flex items-center">
                    {{ media | video_tag: autoplay: true, loop: true, mute: true, controls: true, class: 'w-full h-full' }}
                  </div>
                </div>
              </div>
              
            {% when 'model' %}
              <div class="relative md:snap-center flex-none border--width border--radius overflow-hidden js:galleryImage
                {{ section.settings.image_border }}
                {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}" 
                x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
                x-bind:data-slide="{{ forloop.index0 }}" data-media-id="{{ media.id }}">
                <div class="bottom-2 left-2 absolute z-10">
                  {% capture badge_content %}
                    {% render 'component__icon', icon: 'box', size: '16' %}
                  {% endcapture %}
                  {% render 'component__badge', 
                    color: 'body',
                    text: 'text',
                    icon: '',
                    content: badge_content %}
                </div>
                <div class="bottom-2 absolute left-auto right-auto z-10 w-full">
                  <button class="btn btn--small btn--secondary"
                    data-shopify-xr
                    data-shopify-model3d-id="{{ media.id }}"
                    data-shopify-title="{{ product.title | escape }}"
                    data-shopify-xr-hidden>
                    {{ 'general.media.view_in_space' | t }}
                  </button>
                </div>
                <div class="overflow-hidden object-contain h-full
                  {{ section.settings.media_ratio }}
                  {{ section.settings.media_color_scheme }}">
                  <div class="flex items-center h-full">
                    {{ media | model_viewer_tag: class: 'w-full h-full' }}
                  </div>
                </div>
              </div>
  
          {% endcase %}
        {% endfor %}
        
      </div>
      
      {%- comment -%}indicators{%- endcomment -%}
      {% if product.media.size > 1 and section.settings.enable_variant_images == false %}
        <div class="bottom-4 absolute left-0 right-0 flex flex-wrap items-center justify-center gap-2 px-4 text-center">
          {% for media in product.media %}
            <button aria-label="gallery_grid_button_{{ forloop.index0 }}" class="color__bg-text animation-100 border--radius w-3 h-1 opacity-25" 
              :class="{ '!opacity-100': gallery_index === {{ forloop.index0 }} }"
              @click="gallery_index_scroll = {{ forloop.index0 }}; scrollToIndex(gallery_index_scroll);"></button>
          {% endfor %}
        </div>
      {% endif %}
      
    </div>
  
    {% comment %} mobile thumbnails {% endcomment %}
    <div class="md:hidden hidescrollbar margin--t-gap padding--l-gap padding--r-gap flex h-full overflow-x-auto "
      style="
        gap: {{ settings.layout_gap_size }}px;">
      {% for media in product.media %}
        <div 
          class="relative md:snap-center flex-none w-16 border--width border--radius overflow-hidden js:galleryImage_thumb_slider_mobile
          {{ media | handle }}"
          {% if section.settings.enable_variant_images %}
            x-show="'{{ media.alt | handle }}'.includes(variantHandle)"
            x-cloak
          {% endif %}  
          x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
          x-bind:data-slide="{{ forloop.index0 }}"
          @click="gallery_index_scroll = {{ forloop.index0 }}; scrollToIndex(gallery_index_scroll);">
          <div class="overflow-hidden object-cover aspect-[1/1] aspect-w-1 aspect-h-1 w-full">
            {% capture image_class %}w-full h-full object-cover !bg-transparent {{ settings.thumbmails_color_scheme }}{% endcapture %}
            {{ media
              | image_url: width: 192, height: 192
              | image_tag: class: image_class, loading: 'lazy', alt: media.alt }}
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</div>
  
{%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
{% if first_3d_model %}
  <script type="application/json" id="ProductJSON-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script>
    function setupShopifyXr(){
      if (!window.ShopifyXR) {
        document.addEventListener('shopify_xr_initialized', function() {
          setupShopifyXr();
        });
      }else{
        document.querySelectorAll('[id^="ProductJSON-"]').forEach((modelJSON) => {
          window.ShopifyXR.addModels(JSON.parse(modelJSON.textContent));
          window.ShopifyXR.setupXRElements();
          modelJSON.remove();
        });
      }
    }

    window.Shopify.loadFeatures([{
      name: 'shopify-xr',
      version: '1.0',
      onLoad: setupShopifyXr
    }]);
  </script>
{% endif %}
  
