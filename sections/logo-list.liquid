<!-- sections/logo-list.liquid -->
{% comment %} 
  Grid of logos or icons.

  Globals:
    - settings.layout_horizontal: horizontaly margin
    - settings.enable_animations: boolean to enable animations
    - settings.thumbnails_color_border: set border of cards

  Pro tips:
    - Use monochrome logo colors to avoid too much distraction.
{% endcomment %}
{% style %}
.scrolling-text--{{ section.id }} {
--move-speed: {{ section.settings.speed }}s;
}

.scrolling-text--{{ section.id }} span {
font-size: {{ section.settings.text_size }}px;
}


{% endstyle %}
<section class="
  {{ section.settings.visibility }}
  {{ section.settings.color_scheme }} 
  {{ section.settings.color_border }}
  {{ section.settings.style_border }}">
  <div class="{{ settings.layout_horizontal }}{% if section.settings.enablescorll %} scrolling-text{% endif %} scrolling-text--{{ section.id }} "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;">

    {% render 'component__section-header' %} 
    <div class="grid scrolling-text__inner scrolling-text__inner--left
      {{ section.settings.row_size_desktop }}
      {{ section.settings.row_size_mobile }}"
      style="
        gap: {{ settings.layout_gap_size }}px;">
      {% for i in (1..4) %}
      {% for block in section.blocks %}
        <div class="border--width border--radius flex items-center justify-center w-full logo-items
          {{ block.settings.layout_col_span }}
          {{ block.settings.layout_row_span }}
          {{ block.settings.color_scheme }}
          {{ block.settings.color_border }}
          ">

          {%- if block.settings.logo == blank -%}
            <div class="relative w-full">
              {{ 'image' | placeholder_svg_tag: 'w-full' }}
            </div>
          {%- else -%}
            <div class="relative w-full
              {{ block.settings.logo_height }}">
              {% capture logo_classes %}
                !bg-transparent m-auto w-auto 
                {{ block.settings.logo_height }}
              {% endcapture %}
              {{ block.settings.logo | image_url: width: 400 | image_tag: class: logo_classes, loading: 'lazy', alt: block.settings.logo.alt }}
            </div>
          {%- endif -%}
          
        </div>
      {% endfor %}
      {% endfor %}

    </div>
    
  </div>
</section>
<style>
@media (min-width: 768px) {
 .scrolling-text--{{ section.id }} .logo-items{min-width:{{section.settings.row_size_desktop}}%;    width: {{section.settings.row_size_desktop}}%;
      flex-basis: {{section.settings.row_size_desktop}}%;
  }
}
@media (max-width: 768px) {
  .scrolling-text--{{ section.id }} .logo-items{min-width:{{section.settings.row_size_mobile}}%;    width: {{section.settings.row_size_mobile}}%;
      flex-basis: {{section.settings.row_size_mobile}}%;
  }
}
.scrolling-text{
overflow:hidden;
}

.scrolling-text__inner{
visibility:visible;
white-space:nowrap;
display:inline-flex;
margin:0.15em 0;
animation:scrolling-text var(--move-speed) linear infinite;
animation-play-state:running;
}

.scrolling-text__inner--right{
transform:translateX(-50%);
animation:scrolling-text-right var(--move-speed) linear infinite;
}

.scrolling-text span{
white-space:nowrap;
}

.scrolling-text:focus .scrolling-text__inner,.scrolling-text:hover .scrolling-text__inner{
animation-play-state:paused;
}

@keyframes scrolling-text{
0%{
transform:translateX(0);
-webkit-transform:translateX(0);
}
to{
transform:translateX(-100%);
-webkit-transform:translateX(-100%);
}
}

@keyframes scrolling-text-right{
0%{
transform:translateX(-50%);
-webkit-transform:translateX(-50%);
}
to{
transform:translateX(0);
-webkit-transform:translateX(0);
}
}
</style>
