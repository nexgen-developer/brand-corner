<!-- sections/testimonial.liquid -->
{% comment %} 
  Grid of testimonials.

  Globals:
    - settings.layout_horizontal: horizontaly margin
    - settings.enable_animations: boolean to enable animations
    - settings.thumbnails_color_border: border color
    - settings.thumbmails_color_scheme: color scheme of thumbnails

  Possible enhancements:
    - Add alternative layout with large quote.
{% endcomment %}

<section class="
  {{ section.settings.visibility }}
  {{ section.settings.color_scheme }} 
  {{ section.settings.color_border }}
  {{ section.settings.style_border }}">
  <div class="{{ settings.layout_horizontal }}"
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;" >

    {% render 'component__section-header' %} 
    <div class="md:grid-cols-3 grid grid-cols-1 mt-8"
      style="
        column-gap: {{ settings.layout_gap_size }}px;
        row-gap: {{ settings.layout_gap_size | times: 1.5 }}px;">

      {% for block in section.blocks %}
        <div>
          <div class="m-0--clear pl-4 mb-2 border--l-width
            {{ section.settings.color_border }}">
            {{ block.settings.content }}
          </div>
          <div class="flex items-center">
            {%- if block.settings.avatar == blank %}
              <div class="relative w-[40px] border__button--radius
                {{ settings.thumbmails_color_scheme }}
                {{ settings.thumbnails_color_border }}">
                {{ 'image' | placeholder_svg_tag: 'w-full object-cover aspect-[1/1]' }}
              </div>
            {%- else -%}
              <div class="w-[40px]">
                <div class="border__button--radius overflow-hidden object-cover aspect-[1/1] aspect-w-1 aspect-h-1
                  {{ settings.thumbmails_color_scheme }}">
                  {{ block.settings.avatar | image_url: width: 80 | image_tag: class: 'h-full w-full object-cover aspect-[1/1]', loading: 'lazy', alt: block.settings.avatar.alt }}
                </div>
              </div>
            {% endif %}
            <div class="m-0--clear type--small ml-2">
              {{ block.settings.title }}
            </div>
          </div>
        </div>
      {% endfor %}

    </div>
    
  </div>
</section>

