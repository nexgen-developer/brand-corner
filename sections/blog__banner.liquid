<!-- sections/blog__banner.liquid -->
{% comment %} 
  Banner with the blog title and a featured image.

  Globals:
    - settings.layout_horizontal: horizontaly margin
    - settings.enable_animations: boolean to enable animations

  Pro tips:
    - Use images that have a high contrast with text.
    - To display any image this section could be replaced with a banner.liquid section.
{% endcomment %}

<section class="relative overflow-hidden flex items-center justify-center
  {{ section.settings.visibility }}
  {{ section.settings.color_scheme }} 
  {{ section.settings.color_border }}
  {{ section.settings.style_border }}">
 
  {%- if section.settings.image_background_desktop %}
    {{ section.settings.image_background_desktop | image_url: width: 5760 | image_tag: style: 'object-fit:cover', class: 'hidden md:block w-full h-full absolute object-cover z-10', loading: 'lazy' }}
  {%- endif -%}

  {%- if section.settings.image_background_mobile == blank %}
    {%- if section.settings.image_background_desktop %}
      {{ section.settings.image_background_desktop | image_url: width: 5760 | image_tag: style: 'object-fit:cover', class: 'md:hidden w-full h-full absolute object-cover z-10', loading: 'lazy' }}
    {%- endif -%}
  {%- else -%}
    {{ section.settings.image_background_mobile | image_url: width: 900 | image_tag: style: 'object-fit:cover', class: 'md:hidden w-full h-full absolute object-cover z-10', loading: 'lazy' }}
  {%- endif -%}

  {%- unless section.settings.video_background == blank %}
    <iframe loading="lazy" class="md:block max-w-none aspect-video absolute z-10 hidden min-w-full min-h-full" frameborder="0" allowfullscreen="" scrolling="no" allow="autoplay;fullscreen" src="https://onelineplayer.com/player.html?autoplay=true&autopause=false&muted=true&loop=true&url=https%3A%2F%2Fvimeo.com%2F{{ section.settings.video_background.id }}&poster=&time=false&progressBar=false&overlay=false&muteButton=false&fullscreenButton=false&style=light&quality=auto&playButton=false" style="position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%);"></iframe>
  {%- endunless -%}

  <div class="relative z-10 w-full h-full"
    {% if section.settings.enable_gradient %}
      style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.2) );"
    {% endif %}>

    <div class="w-full flex flex-row flex-wrap py-8
      {{ settings.layout_horizontal }}
      {{ section.settings.layout_x_alignment }}
      {{ section.settings.layout_y_alignment }}
      {{ section.settings.layout_y_spacing }}
      {{ section.settings.color_text }}
      {% assign colors = section.settings.color_scheme | split: " " %}{{ colors[1] }}">
      <div class="max-w-prose
        {% unless request.design_mode %}
          {% if settings.enable_animations %}
            opacity-0 js:animation animation-300 
          {% endif %}
        {% endunless %}"
        {% if settings.enable_animations %}
          data-delay="0" 
          data-replace="{ 
            'opacity-0' : 'opacity-100'
          }"
        {% endif %}>

        <h1>{{ blog.title }}</h1>

        {%- unless section.settings.content == blank %}
          <div>
            {{ section.settings.content }}
          </div>
        {%- endunless -%}

        {%- unless section.settings.button_label == blank %}
          <a href="{{ section.settings.button_url }}" class="{{ section.settings.button_color }}">
            {{ section.settings.button_label }}
          </a>
        {%- endunless -%}
        
      </div>
      
    </div>
  </div>
  
</section>

