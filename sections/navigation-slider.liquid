<!-- sections/navigation-slider.liquid -->
{% comment %} 
  Slideshow similar to instagram stories component.

  Globals:
    - settings.layout_horizontal: horizontaly margin
    - settings.thumbmails_color_scheme: set color of items
    - settings.thumbnails_color_border: set border of cards

  Pro tips:
    - Use this to highlight key pages and navigation.
{% endcomment %}

  <section class="
    {{ section.settings.visibility }}
    {{ section.settings.color_scheme }} 
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}">
    <div class="!px-0 
      {{ settings.layout_horizontal }}"
      style="
        padding-top:{{ section.settings.spacing_top }}px;
        padding-bottom:{{ section.settings.spacing_bottom }}px;">
  
      <div class="flex flex-wrap">
        <div class="relative w-full py-2"
          x-data="{
            index: 0,
            index_size: {{ section.blocks.size | minus: 1 }}
          }">
          
          {%- comment -%}slides{%- endcomment -%}
          <div class="whitespace-nowrap md:snap-x scroll-smooth hidescrollbar inline-flex w-full gap-4 px-4 overflow-x-auto overflow-y-hidden" 
            x-ref="slider">
            
            {% for block in section.blocks %}
              <div class="md:snap-center flex justify-center flex-none w-[70px]" 
                x-intersect:enter.full="index = {{ forloop.index0 }};"
                x-bind:data-slide="{{ forloop.index0 }}">
              
                <div class="flex w-full">
                  <a href="{{ block.settings.url }}"
                    class="whitespace-nowrap text-ellipsis flex flex-row flex-wrap overflow-hidden text-center no-underline">
                    {%- if block.settings.image_featured == blank %}
                      <div class="relative w-[70px] mb-1 rounded-full overflow-hidden
                        {{ settings.thumbmails_color_scheme }}
                        {{ settings.thumbnails_color_border }}">
                        {{ 'collection-1' | placeholder_svg_tag: 'w-full object-cover aspect-[1/1]' }}
                      </div>
                    {%- else -%}
                      <div class="w-[70px] mb-1">
                        <div class="rounded-full overflow-hidden object-cover aspect-[1/1] aspect-w-1 aspect-h-1
                          {{ settings.thumbmails_color_scheme }}">
                          {% capture image_class %}w-full h-full object-cover aspect-[1/1] {{ settings.thumbmails_color_scheme }} {% endcapture %}
                          {{ block.settings.image_featured | image_url: width: 160 | image_tag: class: image_class, loading: 'lazy', alt: block.settings.image_featured.alt }}
                        </div>
                      </div>
                    {% endif %}
                    <div class="w-full">
                      <p class="type--small mb-0 truncate">{{ block.settings.heading }}</p>
                    </div>
                  </a>
                </div>
                
              </div>
            {% endfor %}
  
          </div>
  
        </div>
      </div>
      
    </div>
  </section>


